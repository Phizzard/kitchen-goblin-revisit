{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",
    "lib": [
      "es6"
    ],
    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    /* Completeness */
    "skipLibCheck": true
  }
}